  <div class="form-group">
    <div>
      <%= f.label :name, "", class: "control-label col-md-4" %>
      <div class="col-md-8">
        <%= f.input_field :name, :placeholder => 'Module Name', class: "text-field form-control", html: {spellcheck: "false"} %>
      </div>
    </div>
    <div>
    	<%= f.label :description, "", class: "control-label col-md-4" %>
      <div class="col-md-8">
        <%= f.input_field :description, :placeholder => 'Describe this Module', class: "text-area form-control", html: {spellcheck: "true"} %>
      </div>
    </div>
    <div>
    	<%= f.label :post, "", class: "control-label col-md-4" %>
      <div class="col-md-8">
        <%= f.input_field :post, :placeholder => 'Create a Post', class: "text-area form-control", html: {spellcheck: "true"} %>
      </div>
    </div>
    <div>
      <%= f.label :video_link, "", class: "control-label col-md-4" %>
      <div class="col-md-8">
        <%= f.input_field :video, :placeholder => 'Add a YouTube Video', class: "text-field form-control" %>
      </div>
    </div>
    <div>
      <%= f.label :sound_cloud_track, "", class: "control-label col-md-4" %>
      <div class="col-md-8">
        <%= f.input_field :soundcloud_track, :placeholder => 'Embed a SoundCloud Track', class: "text-field form-control" %>
      </div>
    </div>

  <center>
    <div class="row">
      <%= f.label :document, class: "control-label col-md-4" %>
      <div class="field col-md-8">
        <%= f.file_field :document %> PDF Only
      </div>
    </div>
    <div class="row">
      <%= f.label :add_image, class: "control-label col-md-4" %>
      <div class="field col-md-8">
        <%= f.file_field :image %> Pictures Only
      </div>
    </div>
    <div class="form-actions row">
      <%= f.button :submit %>
    </div>
  </center>
  </div>
