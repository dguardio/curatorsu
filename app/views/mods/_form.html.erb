  <div class="form-group">
    <%= f.label :name, class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%= f.input_field :name, class: "text-field form-control", html: {spellcheck: "false"} %>
    </div>
  </div>
  <div>
  	<%= f.label :description, class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%= f.input_field :description, class: "text-area form-control", html: {spellcheck: "true"} %>
    </div>
  </div>
  <div>
  	<%= f.label :post, class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%= f.input_field :post, class: "text-area form-control", html: {spellcheck: "true"} %>
    </div>
  </div>
  <div>
    <%= f.label :video_link, class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%= f.input_field :video, class: "text-field form-control" %>
    </div>
  </div>
  <div>
    <%= f.label :sound_cloud_track, class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%= f.input_field :soundcloud_track, class: "text-field form-control" %>
    </div>
  </div>
  <div>
    <%= f.label :document, class: "control-label col-md-4" %>
    <div class="field col-md-8">
      <%= f.file_field :document %>
    </div>
  </div> 

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
