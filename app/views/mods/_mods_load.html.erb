<% @doc = root_url.chop + @mod.document_url%>
<a href="#">Course Video</a>
<a href="#">Display Notes</a>
<a href="#">Course Audio</a>

<div class="videos">
	<%= embed_video(@mod.video) %>
</div>

<div class="audios">
	<%= @mod.soundcloud_track.to_s.html_safe %>
</div>

<div class="notes">
	<%= @mod.post %>
</div>

<div class="docs">
	<iframe src="https://docs.google.com/viewer?url=<%= @doc -%>&embedded=true" style="width:600px; height:500px;" frameborder="0"></iframe>
	<%= @doc %>
	<%= root_path + @mod.document_url %>
</div>

