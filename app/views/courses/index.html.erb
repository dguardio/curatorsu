<h1>Listing courses</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description%></td>
        <td><%= course.timeline %></td>
        <td><%= course.instructors %></td>
      <% if curator_signed_in? %>
        <td><%= link_to 'Show', curator_courses_path %></td>
        <td><%= link_to 'Edit', edit_curator_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <br>
        <%= link_to 'New Course', new_curator_course_path %>
      <% else %>
        <td><%= link_to('Select Course', curator_course_path(id: course.id)) %></td>
      <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>
