<div class="yielder">
<p id="notice"><%= notice %></p>
	<div class="course-info">
		<div class="course-header row">
			<center>
				<h1> <%= @course.name %> </h1>
				<h5> <%= @course.description %> </h5>
			</center>
		</div>

		<!-- TODO  -->
		<!-- Add Introductory Video on Course Show Page and Display Course Image if Video Not Available -->
		<div class="course-subhead row">
	  		<div class="col-lg-9 col-md-12 col-sm-12">
	  			<%if @course_mods.first.video.present? %>
	  				<%= embed_video(@course_mods.first.video) %>
	  			<% else %>
	  				<%= image_tag @course.image.thumb.url :class => "course-img img-responsive" %>
	  			<% end %>
	  		</div>
	  		<div class="course-action col-lg-3 col-md-12 col-sm-12">
	  		  	<p> <strong>Duration: </strong> <br> <%= @course.timeline %> </p>
	  		  	<p> <strong> Instructor(s): </strong> <br> <%= @course.instructors %> </p>
	  		  	<p> <strong>Lectures:</strong><br> contains <%= @course_mods.count %> Modules </p>
		  	   <% if can? :create && :update, Mod %>
				<%= link_to 'Back', :back, class: "btn btn-primary" %><br>
				<%= link_to 'Edit Course Details', edit_user_course_path, class: "btn btn-primary" %><br>
				<%= link_to 'Add New Module', new_user_course_mod_path(course_id: @course.id), class: "btn btn-primary"%><br>
			   <% else %>
				<%= link_to 'Start this Course here!', user_course_path(course_id: @course.id), class: "btn btn-primary" %>
			   <% end %>
	  		</div>

		</div>
	</div>

	<div class="modules">
		
	</div>	 
</div>
